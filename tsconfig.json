{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "controllers/**/*",
    "routes/**/*",
    "middlewares/**/*",
    "models/**/*",
    "services/**/*",
    "utils/**/*",
    "src/**/*"
  ]
}

