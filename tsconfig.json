{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "configs/**/*",
    "controllers/**/*",
    "interfaces/**/*",
    "middlewares/**/*",
    "models/**/*",
    "routes/**/*",
    "services/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

